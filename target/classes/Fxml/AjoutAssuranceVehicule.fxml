<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.assurance.assurancess.controller.AjoutAssuranceVehiculeController"
      prefWidth="400" prefHeight="300" alignment="CENTER">
    <stylesheets>
        <URL value="@css/AjoutAssuranceVehicule.css"></URL>
    </stylesheets>

    <Label text="Ajouter Assurance Véhicule" style="-fx-font-size: 18px;" />

    <VBox spacing="10" alignment="CENTER">
        <TextField fx:id="marqueField" promptText="Marque" />
        <TextField fx:id="modeleField" promptText="Modèle" />
        <TextField fx:id="matriculeField" promptText="Matricule" />
        <DatePicker fx:id="dateDebutPicker" promptText="Date de début" />
        <TextField fx:id="periodeValidationField" promptText="Période de validation" />
        <TextField fx:id="imageField" promptText="Chemin de l'image" />

        <!-- Ajout des boutons -->
        <HBox spacing="10">
            <Button text="Show" onAction="#showDetails" />
            <Button text="Return" onAction="#returnToPreviousScene" />
            <Button text="Ajouter" onAction="#ajouterAssuranceVehicule" />
        </HBox>
    </VBox>

</VBox>
