<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.assurance.assurancess.controller.UpdateAssController"
      prefWidth="300" prefHeight="200" alignment="CENTER">


    <Label text="Modifier une assurance" style="-fx-font-size: 18px;" />
    <stylesheets>
        <URL value="@css/UpdateAss.css"></URL>
    </stylesheets>

    <VBox spacing="10" alignment="CENTER">
        <HBox spacing="10">
            <Label text="Nom du pack:" />
            <TextField fx:id="nomPackField" />
        </HBox>

        <HBox spacing="10">
            <Label text="Promotion du pack:" />
            <TextField fx:id="promotionPackField" />
        </HBox>

        <HBox spacing="10">
            <Label text="Description:" />
            <TextField fx:id="descriptionField" />
        </HBox>

        <HBox spacing="10">
            <Label text="Type du pack:" />
            <TextField fx:id="typePackField" />
        </HBox>

        <Button text="Modifier" onAction="#modifieAssurance" />
    </VBox>
</VBox>
