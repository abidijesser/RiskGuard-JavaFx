<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<?import java.net.URL?>
<VBox alignment="CENTER" prefHeight="400" prefWidth="600" stylesheets="stylesheet.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.assurance.assurancess.controller.AssuranceController"> <!-- Change the path to your actual CSS file -->
    <stylesheets>
        <URL value="@css/addAss.css"></URL>
    </stylesheets>
    <Label style="-fx-font-size: 24px;" text="Ajouter une assurance" />

    <VBox alignment="CENTER" spacing="20">
        <HBox spacing="20">
            <Label text="Nom du pack:" />
            <TextField fx:id="nomPackField" styleClass="text-field" />
        </HBox>

        <HBox spacing="20">
            <Label text="Promotion du pack:" />
            <TextField fx:id="promotionPackField" styleClass="text-field" />
        </HBox>

        <HBox spacing="20">
            <Label text="Description:" />
            <TextField fx:id="descriptionField" styleClass="text-field" />
        </HBox>

        <HBox spacing="20">
            <Label text="Type du pack:" />
            <TextField fx:id="typePackField" styleClass="text-field" />
        </HBox>

        <Button onAction="#addAssurance" styleClass="button" text="Ajouter" />

        <!-- Ajouter le ListView pour afficher les assurances -->
        <ListView fx:id="assuranceListView" />

        <!-- Bouton "Return" -->
        <Button onAction="#returnToPreviousScene" styleClass="button" text="Return" />
    </VBox>
</VBox>
