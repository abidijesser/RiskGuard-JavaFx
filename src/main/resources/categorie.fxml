<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.categorieController"
            prefHeight="400.0" prefWidth="600.0" stylesheets="categorie.css">

    <!-- Title -->
    <Label text="Category Management" layoutX="249.0" layoutY="20.0">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>

    <!-- Input Fields -->
    <GridPane layoutX="54.0" layoutY="68.0" prefHeight="200.0" prefWidth="500.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    </GridPane>

    <!-- Buttons -->
    <HBox alignment="CENTER" layoutX="229.0" layoutY="300.0" spacing="20.0">
        <Button fx:id="addButton" onAction="#handleAddButton" text="Add"/>
        <Button fx:id="updateButton" onAction="#handleUpdateButton" text="Update"/>
        <Button fx:id="deleteButton" onAction="#handleDeleteButton" text="Delete"/>
        <Button fx:id="returnButton" onAction="#handleReturnButton" text="Return to Marketing" styleClass="form-button"/> <!-- New button -->
    </HBox>

    <!-- Table View -->
    <TableView fx:id="categoryTableView" layoutX="54.0" layoutY="110.0" prefHeight="150.0" prefWidth="500.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID"/>
            <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name"/>
        </columns>
    </TableView>

</AnchorPane>
