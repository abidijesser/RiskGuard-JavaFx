<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane alignment="CENTER" prefHeight="600" prefWidth="600" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.assurance.assurancess.controller.AssuranceController">

    <VBox alignment="CENTER" prefHeight="600" prefWidth="600" spacing="20">
        <Label text="ADMIN CENTER ASSURANCE" />

        <HBox alignment="CENTER" spacing="20">
            <TextField fx:id="rechercheField" promptText="Recherche...id" />
            <Button onAction="#rechercher" text="look" />
        </HBox>

        <ListView fx:id="assuranceListView" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="207.0" prefWidth="258.0" style="-fx-background-color: #808080;;" VBox.vgrow="ALWAYS" />

        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#ajouterAssurance" text="Add Ass" />
            <Button onAction="#modifierAssurance" text="upd" />
            <Button onAction="#supprimerAssurance" text="drop" />
            <Button onAction="#ajouterAssuranceVehicule" text="Add Ass car" />
            <Button onAction="#ajouterAssuranceVie" text="Add Ass Vie" />
            <Button onAction="#reloadList" text="Reload" />
            <!-- Ajout du bouton Reload -->
        </HBox>
    </VBox>

</StackPane>
