<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.assurance.assurancess.controller.UpdateAssVehiculeController"
      prefWidth="400" prefHeight="300" alignment="CENTER">

    <Label text="Mettre à jour Assurance Véhicule" style="-fx-font-size: 18px;" />

    <VBox spacing="10" alignment="CENTER">
        <TextField fx:id="marqueField" promptText="Marque" />
        <TextField fx:id="modeleField" promptText="Modèle" />
        <TextField fx:id="matriculeField" promptText="Matricule" />
        <TextField fx:id="datedebutField" promptText="Date de début" />
        <TextField fx:id="periodeValidationField" promptText="Période de validation" />
        <TextField fx:id="imageField" promptText="Chemin de l'image" />

        <!-- Bouton pour mettre à jour -->
        <Button text="Mettre à jour" onAction="#updateAssuranceVehicule" />

        <!-- Bouton "Return" -->
        <Button text="Return" onAction="#returnToPreviousScene" />
    </VBox>

</VBox>
